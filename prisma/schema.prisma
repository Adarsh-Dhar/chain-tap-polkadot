// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contract {
  id            Int      @id @default(autoincrement())
  phalaEndpoint String
  merchantName  String?
  // Loyalty token configuration
  assetId       Int?
  tokensPerOrder Int? // fixed tokens per order
  signerAddress String?
  webhookUrl    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("contracts")
  OrderReward OrderReward[]
}

model OrderReward {
  id          Int      @id @default(autoincrement())
  contractId  Int
  orderId     String
  wallet      String?
  amount      String?   // store as string to avoid JS bigint issues
  assetId     Int?
  status      String    // pending | success | failed
  txHash      String?
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  contract    Contract  @relation(fields: [contractId], references: [id])

  @@unique([contractId, orderId])
  @@map("order_rewards")
}

model ProductToken {
  id            Int      @id @default(autoincrement())
  productId     String   // Shopify product ID (gid://shopify/Product/...)
  assetId       Int?      @unique // Polkadot Asset Hub token ID (unique to prevent duplicates)
  title         String
  handle        String
  description   String?
  vendor        String?
  productType   String?
  tags          String[]  @default([])
  metadata      Json?     // Store full product metadata as JSON
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([productId])
  @@map("product_tokens")
  TokenListing  TokenListing[]
}

model TokenListing {
  id            Int      @id @default(autoincrement())
  sellerAddress String   // Wallet address of the seller
  assetId       Int      // Token asset ID
  productId     String   // Reference to ProductToken
  quantity      String   // Amount of tokens for sale (as string to handle large numbers)
  pricePerToken String   // Price per token in native currency
  totalPrice    String   // Calculated total price
  status        String   // active | sold | cancelled
  buyerAddress  String?  // Buyer's wallet address when sold
  txHash        String?  // Transaction hash when sold
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  productToken  ProductToken? @relation(fields: [productId], references: [productId])
  transactions  MarketTransaction[]

  @@map("token_listings")
}

model MarketTransaction {
  id            Int      @id @default(autoincrement())
  listingId     Int      // Reference to TokenListing
  sellerAddress String
  buyerAddress  String
  assetId       Int
  quantity      String
  pricePerToken String
  totalPrice    String
  txHash        String   // Blockchain transaction hash
  status        String   // pending | completed | failed
  createdAt     DateTime  @default(now())

  listing       TokenListing @relation(fields: [listingId], references: [id])

  @@map("market_transactions")
}

model ShopifySession {
  id                Int       @id @default(autoincrement())
  shop              String    @unique // shop domain (e.g., example.myshopify.com)
  accessToken       String    // Shopify access token
  scope             String    // granted scopes (comma-separated)
  expiresAt         DateTime? // token expiry (for online tokens)
  associatedUserId  BigInt?  // Shopify user ID (for online tokens) - using BigInt for large IDs
  associatedUserEmail String? // Shopify user email (for online tokens)
  isOnline          Boolean   @default(false) // online vs offline token
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("shopify_sessions")
}

