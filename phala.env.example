# Copy this to .env.local and fill values
SHOPIFY_WEBHOOK_SECRET=
PHAT_ENDPOINT_URL=
PHAT_FORWARD_TOKEN=

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/chaintap?schema=public"

# Local Network Configuration
# WebSocket URL for local network
# Localnet (rococo-local): ws://localhost:9944
# Mainnet: wss://polkadot-asset-hub-rpc.polkadot.io
# Testnet: wss://polkadot-asset-hub-rpc-tn.dotters.network
POLKADOT_WS_URL=ws://localhost:9944

# Phat Contract Wallet (for signing transactions)
# Use either mnemonic (12/24 words) OR seed phrase
# SECURITY: Never commit this to version control!
PHAT_CONTRACT_MNEMONIC="word1 word2 word3 ... word12"
# OR
# PHAT_CONTRACT_SEED="0x..."

# Token Configuration
# Asset ID of your loyalty token on Polkadot Asset Hub
ASSET_HUB_ASSET_ID=1
# Tokens per USD (e.g., 10 tokens per $1 spent)
TOKEN_RATE=10
